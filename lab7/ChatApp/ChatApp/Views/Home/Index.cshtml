
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<input type="hidden" value="@ViewData["UserName"]" id="UserName" />

<h1>Chat app</h1>

<div class="row">
    <div class="col-md-10">
        <input placeholder="Enter the message" id="tbxMsg" class="form-control" />
    </div>
    <div class="col-md-2 text-right">
        <button class="btn btn-success" id="btnSend">Send</button>
    </div>

    <div class="col-12">
        <ul id="listChat">
        </ul>
    </div>
</div>

@section Scripts {
    <script src="~/app.js"></script>
}
