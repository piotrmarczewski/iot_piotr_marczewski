<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cdv_projekt_app.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Waga:" FontSize="Medium" />
        <Label Text="{Binding Weight}" FontSize="Small"/>
        <Label Text="Data:" FontSize="Medium" />
        <Label Text="{Binding Date, StringFormat='{0:yyyy-MM-dd}'}" FontSize="Small"/>
        <Label Text="Opis:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>